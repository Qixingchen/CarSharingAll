<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carsharing_type_layout" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"> 
    
<!-- 界面主布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dddddd"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    

        <LinearLayout
            android:id="@+id/WorkCS"
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:layout_marginTop="1dp" 
            android:background="@drawable/white_blue_selector"         
            android:orientation="horizontal" >

            <ImageView
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
				android:layout_margin="5dp"
                android:src="@drawable/icon_commuters" 
                android:background="@color/white_ffffff" />
            
            <LinearLayout
                android:id="@+id/WorkCS1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:orientation="vertical" >

	            <TextView
	                android:layout_marginTop="10dp"
	                android:id="@+id/carsharing_type_commuters"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="上下班拼车"
	                android:textSize="20sp"
	                android:textAppearance="?android:attr/textAppearanceLarge" />

	            <TextView
	                android:id="@+id/workcsdes"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/workcsdes" />
	            
            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ShortCS"
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/white_blue_selector"          
            android:orientation="horizontal" >
            
            <ImageView
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
				android:layout_margin="5dp"
                android:src="@drawable/icon_shortway" 
                android:background="@color/white_ffffff" />
            
            <LinearLayout
                android:id="@+id/shortCS1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:orientation="vertical" >

	            <TextView
	                android:layout_marginTop="10dp"
	                android:id="@+id/carsharing_type_shortway"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="短途拼车"
	                android:textSize="20sp"
	                android:textAppearance="?android:attr/textAppearanceLarge" />

	            <TextView
	                android:id="@+id/shortcsdes"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/shortcsdes" />
	            
            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LongCS"
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/white_blue_selector"
            android:orientation="horizontal" >
            
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/button3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
				android:layout_margin="5dp"
                android:src="@drawable/icon_longway" 
                android:background="@color/white_ffffff" />
            
            <LinearLayout
                android:id="@+id/longCS1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:orientation="vertical" >

	            <TextView
	                android:layout_marginTop="10dp"
	                android:id="@+id/carsharing_type_longway"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="长途拼车"
	                android:textSize="20sp"
	                android:textAppearance="?android:attr/textAppearanceLarge" />

	            <TextView
	                android:id="@+id/textView3"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/longcsdes" />
	            
            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LongTermCS"
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:layout_marginTop="1dp" 
            android:background="@drawable/white_blue_selector"
            android:orientation="horizontal" >
            
            <ImageView
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
				android:layout_margin="5dp"
                android:src="@drawable/icon_taxi"
                android:background="@color/white_ffffff" />
            
            <LinearLayout
                android:id="@+id/longtermCS1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:orientation="vertical" >

	            <TextView
	                android:layout_marginTop="10dp"
	                android:id="@+id/carsharing_type_taxi"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="出租车拼车"
	                android:textSize="20sp"
	                android:textAppearance="?android:attr/textAppearanceLarge" />

	            <TextView
	                android:id="@+id/longtermcsdes"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/longtermcsdes" />
	            
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/margin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp" 
            android:background="@color/white_ffffff"
            android:orientation="horizontal" >
        </LinearLayout>

</LinearLayout>

<include 
    layout="@layout/drawer_layout"/>
</android.support.v4.widget.DrawerLayout>