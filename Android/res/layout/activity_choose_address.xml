<LinearLayout
      	xmlns:android="http://schemas.android.com/apk/res/android"
 		android:layout_width="fill_parent"
 		android:layout_height="fill_parent"
 		android:background="@color/gray_cccccc"
	    android:orientation="vertical">
     
     <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="50dp"
           android:layout_margin="7dp"
           android:background="@color/white_ffffff"
           android:orientation="horizontal"  >
           
           <ImageView
         android:id="@+id/chooseaddress_search"
         android:layout_width="40dp"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_action_search"
         android:layout_gravity="center"/>
           
     <AutoCompleteTextView
         android:id="@+id/chooseaddress_start"
         android:layout_weight="1"
         android:layout_width="wrap_content"
         android:layout_height="45dp"
         android:gravity="bottom"
         android:hint="选择起点..."
         android:textColorHint="@color/blue_0099cc" />
     
     <Button
         android:id="@+id/chooseaddress_send"
         android:layout_width="60dp"
         android:layout_height="40dp"
         android:text="确定"
         android:textColor="@color/white_ffffff"
         android:background="@drawable/blue_btn_selector"
         android:layout_marginRight="7dp"
         android:layout_gravity="center"/>
     

     </LinearLayout>
     
     <LinearLayout
         android:id="@+id/chooseaddress_mylocation"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
           android:layout_margin="7dp"
           android:background="@drawable/white_blue_selector"
           android:orientation="horizontal"  >
     
     <ImageView
         android:id="@+id/chooseaddress_found"
         android:layout_width="40dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:src="@drawable/ic_action_location_found"
         android:layout_gravity="center"/>
     
     <TextView
         android:layout_weight="1"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:gravity="center|left"
         android:text="我的位置"
         android:textSize="20sp"/>

    </LinearLayout>
    
          <TextView 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="收藏的地址"
         android:layout_margin="7dp"/>
          
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"

         android:orientation="vertical">
         
         <ListView 
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:id="@+id/chooseaddress_list1"
             android:layout_weight="1"
             android:background="@color/white_ffffff"
             android:layout_margin="7dp"/>
         
         <TextView 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="历史地址"
         android:layout_margin="7dp"/>
         
         <ListView 
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:id="@+id/chooseaddress_list2"
             android:layout_weight="1"
             android:background="@color/white_ffffff"
             android:layout_margin="7dp"/>
     </LinearLayout>

 </LinearLayout>