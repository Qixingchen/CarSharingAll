<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/long_linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/long_arrangementdetail_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="16dp"
            android:background="@color/white_ffffff"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/long_arrangementdetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="用户名"
                android:textColor="@color/white_ffffff"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/long_arrangementdetail_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white_ffffff" />

                <TextView
                    android:id="@+id/long_arrangementdetail_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="这个人很懒什么都没有留下"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white_ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/long_linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/long_linearLayout1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/long_arrangementdetail_startplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="出发地"
            android:textColor="#bfbfbf"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/long_arrangementdetail_startaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="厦门市思明区厦大学生公寓"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dip"
            android:background="#696969" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/long_linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/long_linearLayout2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/long_arrangementdetail_endplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="目的地"
            android:textColor="#bfbfbf"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/long_arrangementdetail_endaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="厦门市思明区厦大西村"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dip"
            android:background="#696969" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/long_linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/long_linearLayout3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/long_arrangementdetail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="出发时间"
            android:textColor="#bfbfbf"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/long_arrangementdetail_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="2014年8月8日    12：30-14：:30"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dip"
            android:background="#696969" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/long_linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/long_linearLayout4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/long_arrangementdetail_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="预约情况"
            android:textColor="#bfbfbf"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/long_arrangementdetail_remainsites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="位置剩余2  已有 2人预约：1男 1女 "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dip"
            android:background="#696969" />
    </LinearLayout>

    <Button
        android:id="@+id/long_acceptbutton"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_below="@+id/long_linearLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/blue_btn_selector"
        android:text ="接受订单"
        android:textColor="#f8f8f8"
        android:textSize="18sp" />

</RelativeLayout>