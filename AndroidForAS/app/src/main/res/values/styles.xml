<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Customize your theme here. -->
    </style>
    
    <!-- 自定义ActionBar样式，重设ActionBar背景，隐藏actionbar左侧的应用图标和标题 -->
    <style name="actionbar_register" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#00000000</item>
       <item name="android:displayOptions"></item>
    </style>
    
      <style name="activity_actionbar_register" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/actionbar_register</item>
    </style>
    <style name="MyProgressDialog" parent="@android:style/Theme.Dialog">  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowNoTitle">true</item> 
    </style>


    <style name="ToolBarBaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/Apptheme_500</item>
        <item name="colorPrimaryDark">@color/Apptheme_700</item>
        <item name="colorAccent">@color/Material_Deep_Orange_500</item>


        <!-- Set AppCompat’s actionBarStyle -->
        <!-- <item name="actionBarStyle">@style/MyActionBar</item> -->
    </style>

    <style name="ToolbarTheme" parent="ToolBarBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


</resources>
